extends layout 

mixin showPostalCard(postalCardObject)
    .postCard
        h3= postalCardObject.title 
        img(src=postalCardObject.image_url)
        p= postalCardObject.description

block content 
    .postCardList
        each postalCard in allPostC
            +showPostalCard(postalCard)

    .buttonList 
        
        
        input(type="button" value="Show a Message" onclick="showSomeMessageOnConsole();")
        input(type="button" value="Remove" alt="THE REMOVE PAGE IS NOT IMPLEMENTED") 

