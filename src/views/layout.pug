doctype html
html(lang="en")
  head
    title= pageTitle
    script(type='text/javascript')
    
    style. 
      p {
        color: brown;
      }
      h1{
        padding-inline: 4%;
        border: 0.1rem solid black;

      }
      .postCard{
        border: 0.1rem solid black;
        border-radius: 5%;
        padding-top: 0rem;
        padding-bottom: 2rem;
        padding-left: 2rem;
        padding-right: 2rem;
        width: 10%;
        margin-left: 2%;
        margin-bottom: 2%;
        

      }
      .postCard:hover{
        background-color: black;
      }

      .postCard h3{
        color: green;
      }
      .postCard img{
        height: 4rem;
      }
      .postCard p{
        line-height: 100%;
        font-size: 80%;
      }

      .postCardList {
        display: flex;
        flex-direction: row;
        justify-content: start;
        flex-wrap: wrap;
        padding-top: 4%;
        padding-bottom: 4%;
        padding-left: 5%;
        padding-right: 5%;
        margin-inline: 5%;
        border: 0.1rem solid black;
      }

      .buttonList {
        padding-block: 1%;
        padding-inline: 3%;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
      }

      .buttonList input[type="button"]{
        width: 10%;
      }
      .buttonList input[type="button"]:nth-child(1){
        background-color: green;
      }

      .buttonList input[type="button"]:nth-child(2){
        background-color: red;
      }



  body
